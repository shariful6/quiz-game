<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F1598C"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>
    <TextView
        android:text="Congratulations !!"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="#000"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/totalQsnID"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Questions: 50"
        android:textSize="30dp"
        android:textColor="#000"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/totalPointsID"
        android:text=" "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:gravity="center"
        />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/earnMsgID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Total Points"
            android:textColor="#000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/balTVID"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/earnMsgID"
            android:layout_marginEnd="123dp"
            android:background="#000"
            android:gravity="center"
            android:text=""
            android:textColor="#FFF"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/earnMsgID"
            android:layout_marginEnd="30dp"
            android:text="NPXS"
            android:textColor="#000"
            android:textSize="25dp" />

    </RelativeLayout>

    <TextView
        android:text="@string/ru"
        android:padding="15dp"
        android:textSize="25dp"
        android:textColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/playAgainBtnID"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/viewId"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_bg4"
        android:text="Finish"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="20dp" />


</LinearLayout>